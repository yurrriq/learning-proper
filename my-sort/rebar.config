  {proper, {git, "git://github.com/manopapad/proper", {branch, "master"}}},
  {propl, {git, "git://github.com/quasiquoting/propl", {branch, "master"}}}]}.

{plugins,
 [{'lfe-compile',
   {git, "git://github.com/lfe-rebar3/compile.git",
    {tag, "0.2.1"}}}]}.
